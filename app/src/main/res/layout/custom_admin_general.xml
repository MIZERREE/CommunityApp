<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_boder4"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/edit_custom_gen_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heading"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/light_red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Announcement date"
            android:background="@drawable/tv_highlight"
            android:paddingLeft="10dp"
            android:textColor="@color/light_red" />

        <TextView
            android:id="@+id/edit_custom_gen_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="2021/06/15"
            android:textColor="@color/light_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Announcement"
            android:background="@drawable/tv_highlight"
            android:paddingLeft="10dp"
            android:textColor="@color/light_red" />

        <TextView
            android:id="@+id/edit_custom_gen_announcement"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Announcement"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/light_red"/>




    </LinearLayout>


</LinearLayout>