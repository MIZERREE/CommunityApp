<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_boder4"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/edit_custom_fine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/light_red"/>

        <TextView
            android:id="@+id/edit_custom_fine_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="2021/06/15"
            android:textColor="@color/light_red" />


        <TextView
            android:id="@+id/edit_custom_fine_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due date"
            android:textColor="@color/light_red"/>

        <TextView
            android:id="@+id/edit_custom_fine_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/light_red"/>
        <TextView
            android:id="@+id/edit_custom_fine_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/light_red"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>