<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP below"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary"/>

    <com.chaos.view.PinView
        android:id="@+id/pin_view_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemCount="6"
        app:itemWidth="50dp"
        app:itemHeight="50dp"
        android:layout_gravity="center"
        app:lineColor="@color/primary"
        android:itemBackground="@color/light_brown"
        android:layout_marginTop="10dp"
        android:inputType="number"
        style="@style/PinWidget.PinView"
        android:cursorVisible="true"
        app:cursorColor="@color/black"
        app:hideLineWhenFilled="true"
        app:itemRadius="5dp"/>

    <Button
        android:id="@+id/custom_btn_verify_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Verify OTP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="dashBoard"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button2"
        />

    <Button
        android:id="@+id/custom_btn_cancel_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancel"
        android:textColor="@color/browser_actions_text_color"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="dashBoard"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        />

</LinearLayout>