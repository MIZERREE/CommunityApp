<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_boder4"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Fine date:"
                android:textColor="@color/light_red" />

            <TextView
                android:id="@+id/edit_custom_user_fine_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="2021/06/15"
                android:layout_marginLeft="50dp"
                android:textColor="@color/light_red" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Due date:"
            android:textColor="@color/light_red" />

        <TextView
            android:id="@+id/edit_custom_user_fine_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due date"
            android:layout_marginLeft="50dp"
            android:textColor="@color/light_red"/>


    </LinearLayout>

        <EditText
            android:id="@+id/edit_custom_user_fine_description"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="5dp"
            android:hint="Description"
            android:background="@drawable/edit_bg"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:gravity="top"
            android:textColor="@color/light_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Amount:"
                android:textColor="@color/light_red" />

            <TextView
                android:id="@+id/edit_custom_user_fine_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginLeft="50dp"
                android:textColor="@color/light_red"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Status:"
                android:textColor="@color/light_red" />

            <TextView
                android:id="@+id/edit_custom_user_fine_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginLeft="58dp"
                android:textColor="@color/light_red"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>